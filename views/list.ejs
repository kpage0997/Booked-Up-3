<h1 class="mb-4 text-center" style="font-weight: 500;">Books</h1>
<p class="text-center text-muted mb-5">
    Explore our curated collection of books spanning various genres and categories. 
</p>
<div class="row g-4">
    <% books.forEach(book => { %>
        <div class="col-md-3 text-center"> <!-- Responsive grid -->
            <img src="<%= book.image_url || '/images/default.jpg' %>" 
                 class="img-fluid rounded mb-3" 
                 alt="<%= book.title %>" 
                 style="height: 200px; object-fit: cover;">
            <h5><%= book.title %></h5>
            <p class="text-muted">By <%= book.author %></p>
            <p><strong>Price:</strong> $<%= book.price.toFixed(2) %></p>
            <a href="/books/<%= book.id %>" class="btn btn-primary btn-sm">View Details</a>
        </div>
    <% }) %>
</div>