   This file defines the view for displaying the order history of customers in the admin section 
   of the BookedUp project. It provides a list of all customer orders with details such as order ID, 
   customer name, order date, total amount, and order status.

-->

<ul class="list-group">
    <% if (orders.length > 0) { %>
        <% orders.forEach(order => { %>
            <li class="list-group-item">
                <strong>Order ID:</strong> <%= order.order_id %> <br>
                <strong>Total:</strong> $<%= order.total ? order.total.toFixed(2) : '0.00' %> <br>
                <strong>Date:</strong> <%= new Date(order.created_at).toLocaleString() %>
                <a href="/admin/orders/<%= order.order_id %>" class="btn btn-sm btn-primary float-end">View Details</a>
            </li>
        <% }) %>
    <% } else { %>
        <li class="list-group-item">No orders found for this customer.</li>
    <% } %>
</ul>

<div class="container mt-4 d-flex justify-content-center my-3">
  <!-- Back to Dashboard Button -->
  <div class="mb-3">
    <a href="/admin" class="btn btn-secondary">Back to Dashboard</a>
  </div>