
    
 <!-- Hero Section -->
<section class="hero d-flex align-items-center text-center text-light mb-5 mt-5" style="background-image: url('/images/hero-background.jpg'); height: 50vh; background-size: cover; background-position: center; position: relative;">

    <!-- Overlay -->
    <div class="hero-overlay" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0, 0, 0, 0.5); z-index: 0;"></div>

    <!-- Content -->
    <div class="container" style="z-index: 1; position: relative;">
        <h1 class="display-4 fw-bold">Welcome to BookedUp</h1>
        <p class="lead mt-3">Your one-stop shop for the best books, trending titles, and timeless classics.</p>
        <a href="/books" class="btn btn-primary btn-lg mt-4 animate-bounce">Browse Our Collection</a>
    </div>
</section>

    <!-- Featured Books Carousel -->
    <div class="container mt-5">
        <h2 class="text-center mb-4" style="font-weight: bold;">Featured Books</h2>
        <hr style="width: 10%; margin: auto; border: 2px solid #007bff;">
        <div id="featuredBooksCarousel" class="carousel slide mt-4" data-bs-ride="carousel">
          
     
<div id="featuredBooksCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="10000"> <!-- 10-second interval -->
    <div class="carousel-indicators">
        <% featuredBooks.forEach((book, index) => { %>
            <button type="button" data-bs-target="#featuredBooksCarousel" data-bs-slide-to="<%= index %>" class="<%= index === 0 ? 'active' : '' %>" aria-current="<%= index === 0 ? 'true' : 'false' %>" aria-label="Slide <%= index + 1 %>"></button>
        <% }) %>
    </div>
    <div class="carousel-inner">
        <% featuredBooks.forEach((book, index) => { %>
            <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                <div class="row align-items-center">
                    <!-- Image Section -->
                    <div class="col-md-6">
                        <img src="<%= book.image_url || '/images/default.jpg' %>" class="d-block w-100 carousel-img" alt="<%= book.title %>">
                    </div>
                    <!-- Description Section -->
                    <div class="col-md-6">
                        <div class="p-4">
                            <h3><%= book.title %></h3>
                            <p><%= book.description.substring(0, 150) %>...</p>
                            <a href="/books/<%= book.id %>" class="btn btn-primary">Learn More</a>
                        </div>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#featuredBooksCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#featuredBooksCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

    <!-- Best Sellers Section -->
    <div class="container mt-5">
        <h2 class="text-center mb-4" style="font-weight: bold;">Best Sellers</h2>
        <hr style="width: 10%; margin: auto; border: 2px solid #007bff;">
        
 
<div class="row mt-5">
    <% bestSellers.forEach(book => { %>
        <div class="col-md-2 text-center mb-4">
            <img src="<%= book.image_url || '/images/default.jpg' %>" 
                 alt="<%= book.title %>" 
                 class="img-fluid rounded" 
                 style="height: 200px; object-fit: cover;">
            <h5 class="mt-3"><%= book.title %></h5>
            <p class="text-muted">By <%= book.author %></p>
            <a href="/books/<%= book.id %>" class="btn btn-outline-primary btn-sm mt-2">View Details</a>
        </div>
    <% }) %>
</div>

   <!-- Categories Section --> 
<div class="container mt-5">
    <h2 class="text-center mb-4" style="font-weight: bold;">Categories</h2>
    <hr style="width: 10%; margin: auto; border: 2px solid #007bff;">
<div class="d-flex justify-content-center flex-wrap mt-4">
    <% categories.forEach(category => { %>
        <div class="col-md-2 text-center">
            <a href="/categories/<%= category.name %>" class="btn btn-outline-primary">
                <%= category.name %>
            </a>
        </div>
    <% }) %>
</div>