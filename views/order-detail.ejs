<%- include('partials/admin-nav') %> <!-- Include the admin navigation -->

<div class="container mt-4">
    <h2>Order Details</h2>
    <% if (orderDetails.length > 0) { %>
        <p><strong>Order ID:</strong> <%= orderDetails[0].order_id %></p>
        <p><strong>Customer Name:</strong> <%= orderDetails[0].customer_name %></p>
        <p><strong>Order Date:</strong> <%= new Date(orderDetails[0].created_at).toLocaleString() %></p>
        <p><strong>Total:</strong> $<%= orderDetails[0].total.toFixed(2) %></p>

        <h3 class="mt-4">Ordered Items</h3>
        <table class="table table-bordered table-hover mt-3">
            <thead class="table-light">
                <tr>
                    <th>Book Title</th>
                    <th>Quantity</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                <% orderDetails.forEach(item => { %>
                    <tr>
                        <td><%= item.title %></td>
                        <td><%= item.quantity %></td>
                        <td>$<%= item.price.toFixed(2) %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <p class="text-muted">No details found for this order.</p>
    <% } %>
</div>