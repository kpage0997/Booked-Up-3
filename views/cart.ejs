<h1 class="mb-4">Your Cart</h1>
<% if (cart.length === 0) { %>
    <p>Your cart is empty.</p>
<% } else { %>
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% cart.forEach(item => { %>
                <tr>
                    <td><%= item.title %></td>
                    <td><%= item.quantity %></td>
                    <td>$<%= item.price.toFixed(2) %></td>
                    <td>$<%= (item.price * item.quantity).toFixed(2) %></td>
                    <td>
                        <a href="/cart/remove/<%= item.id %>" class="btn btn-danger btn-sm">Remove</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    <a href="/cart/checkout" class="btn btn-primary">Proceed to Checkout</a>
<% } %>