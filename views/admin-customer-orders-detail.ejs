<!-- admin-customer-orders-detail.ejs -->
<h1 class="mb-4">Orders for <%= customer.username %></h1>
<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Book</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        <% orders.forEach(order => { %>
            <tr>
                <td><%= order.order_id %></td>
                <td><%= order.title %></td>
                <td><%= order.quantity %></td>
                <td>$<%= order.price.toFixed(2) %></td>
                <td>$<%= (order.quantity * order.price).toFixed(2) %></td>
                <td><%= new Date(order.created_at).toLocaleString() %></td>
            </tr>
        <% }) %>
    </tbody>
</table>